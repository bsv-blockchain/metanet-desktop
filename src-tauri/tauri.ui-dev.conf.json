{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "BSV Desktop",
  "identifier": "com.bsv-desktop.app",
  "version": "0.4.3",
  "build": {
    "beforeDevCommand": "npm run dev-ui",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "BSV Desktop",
        "width": 1620,
        "height": 1000
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "opener": null,
    "dialog": null,
    "shell": null
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
